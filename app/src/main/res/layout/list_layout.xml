<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@drawable/box"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="hello"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="140dp">
        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:text="Current Percentage "
            android:layout_toRightOf="@id/subject_name"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/current"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:text="hel"
        android:layout_toRightOf="@id/subject_name"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="220dp">
        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:text="Required Percentage"
            android:layout_toRightOf="@id/subject_name"
            android:textColor="#D50000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
        android:id="@+id/minimum"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:text="hel"
            android:layout_toRightOf="@id/current"
            android:textColor="#D50000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/presents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Attended : 13"
        android:textSize="15sp"
        android:layout_below="@id/subject_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"/>
    <TextView
        android:id="@+id/absents"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bunked : 13"
        android:textSize="15sp"
        android:layout_below="@id/presents"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/presents"
        android:layout_below="@id/subject_name">

        <Button
            android:id="@+id/pAdd"
            android:onClick="PADD"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="+"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_buttons_green"/>
        <Button
            android:id="@+id/pSubtract"
            android:onClick="PSUBTRACT"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="-"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button_red"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/absents"
        android:layout_below="@id/presents"
        android:id="@+id/abc">

        <Button
            android:id="@+id/aAdd"
            android:onClick="AADD"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="+"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_buttons_green"/>
        <Button
            android:id="@+id/aSubtract"
            android:onClick="ASUBTRACT"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="-"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_button_red"/>
        <TextView
            android:id="@+id/id1"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:text="ID :"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_bright"/>
        <TextView
            android:id="@+id/id"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_bright"/>


    </LinearLayout>

</RelativeLayout>
